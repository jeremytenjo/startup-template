rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

     match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /jobs/{jobId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.sellerUid || request.auth.uid == resource.data.buyerUid || request.auth.uid == resource.data.assignedCreatorAgencyUid;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.sellerUid || request.auth.uid == request.resource.data.buyerUid || request.auth.uid == resource.data.assignedCreatorAgencyUid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.buyerUid && resource.data.stage != 'canceled';
  	}

    match /offers/{offerId} {
      allow read, write: if request.auth != null;
  	}

    match /messages/{messageId} {
      allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(resource.data.conversationId)).data.members || get(/databases/$(database)/documents/conversations/$(resource.data.conversationId)).data.reported == true; 
      allow write: if request.auth != null
    }

    match /conversations/{conversationId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow write: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if request.auth != null && request.auth.uid in resource.data.members;
    }
    
    match /feedback/{feedbackId} {
      allow write: if true;
    }

    match /userMemberships/{userMembershipId} {
      allow read: if request.auth != null;
    }

    match /creatorAgencyAgreements/{creatorAgencyAgreementId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.agencyUid ||  request.auth.uid == request.resource.data.creatorUid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.agencyUid ||  request.auth.uid == resource.data.creatorUid;
    }
    
    match /notifications/{notificationId} {
      allow read: if resource.data.receiverUid == request.auth.uid;
    	allow write: if request.auth != null;
  	}
   
    match /reviews/{reviewId} {
      allow read: if true
      allow write: if request.auth != null && request.auth.uid == request.resource.data.receiverUid || request.auth.uid == request.resource.data.fromUid;
  	}

    match /games/{gameId} {
      allow read: if true;
  	  allow write: if request.auth.uid == request.resource.data.uid;
  	  allow delete: if request.auth.uid == resource.data.uid;
    }

    match /reports/{reportId} {
  	  allow read: if request.auth.uid == resource.data.senderUid;
  	  allow write: if request.auth.uid == request.resource.data.senderUid;
    }

    match /refunds/{refundId} {
  	  allow read: if request.auth.uid == resource.data.uid;
    }

    match /userCredits/{userCreditId} {
  	  allow read: if request.auth.uid == resource.data.uid;
    }

    match /developerRewards/{developerRewardId} {
  	  allow read: if request.auth != null;
    }

    match /claimedDeveloperRewards/{claimedDeveloperRewardId} {
  	  allow read: if request.auth != null && request.auth.uid == resource.data.developerUid;
    }

    match /adModels/{adModelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
    
    match /gameZones/{gameZoneId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /gameZoneAds/{gameZoneAdId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.buyerUid || request.auth.uid == resource.data.sellerUid;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.buyerUid || request.auth.uid == request.resource.data.sellerUid;
    }

    match /discordAccounts/{discordAcountId} {
  	  allow read: if request.auth.uid != null;
  	  allow delete: if request.auth.uid == resource.data.uid;
    }

    match /gameZoneAdPaymentRecords/{gameZoneAdPaymentRecordId} {
  	  allow read: if request.auth.uid == resource.data.buyerUid || request.auth.uid == resource.data.sellerUid;
    }

    match /favoriteUsers/{favoriteUserId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
  }
}